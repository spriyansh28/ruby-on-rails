    <p><%= post.title.upcase %></p>
    <p> Posted <%= distance_of_time_in_words(post.created_at,Time.now) %> ago</p>
    <%= image_tag post.image if !post.image.nil? %>
    <p><%= post.body %></p>
      <tr>
      <td><%= link_to post.status, toggle_status_post_path(post)%></td>
