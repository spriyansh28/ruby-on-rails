<div class="col">
    <div class="card shadow-sm">
    <%= image_tag technology.thumb_image if !technology.thumb_image.nil?%>
    
      <div class="card-body">
        <div class="card-text">
            <h4><%= link_to technology.title, technology_show_path(technology) %></h4>
            <p><%= technology.subtitle %></p>
        </div>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to technology.status, toggle_status_technology_path(technology), class: "btn btn-sm btn-outline-secondary" %>
             <%= link_to 'Edit', edit_technology_path(technology.id), class: "btn btn-sm btn-outline-secondary" %>
             <%= link_to 'Delete', technology_path(technology), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>   
          </div>
          <small class="text-muted"> <%= distance_of_time_in_words(technology.created_at,Time.now) %> ago</small>
        </div>
      </div>
    </div>
</div>

<td><%= link_to technology.status, toggle_status_technology_path(technology) if logged_in?(:site_admin) %></td>
