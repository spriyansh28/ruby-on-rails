<div class="container tech-container">
   <div class="row">
      <div class="col-md-7">
        <%= image_tag @technology.main_image.url, width: "100%"  unless @technology.main_image.url.nil?%>
      </div>
      <div class="col-md-5">
         <h1>
           <%= @technology.title %>
         </h1>
         
         <hr>
           <h6> <%= @technology.subtitle %> </h6>
         
         <p>
           <%= @technology.body %>
         </p>
         </hr>

         <h3> Technologies Used: </h3>
         <% @technology.items.each do |i|%>
           <p><%= i.name %> </p>
         <% end %>   
         
         <%= link_to 'Edit', edit_technology_path(@technology) %> |
         <%= link_to 'Back', technologies_path %>
      </div>
    </div>
</div>




