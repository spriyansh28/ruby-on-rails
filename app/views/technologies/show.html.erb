<p id="notice"><%= notice %></p>

<p>
<%= image_tag @technology.main_image if !@technology.main_image.nil?%>
</p>

<h2>
  <%= @technology.title %>
</h2>

<h3>
  <%= @technology.subtitle %>
</h3>

<p>
  <%= @technology.body %>
</p>

<h3> Technologies Used: </h3>
<% @technology.items.each do |i|%>
  <p><%= i.name %> </p>
<% end %> 


<%= link_to 'Edit', edit_technology_path(@technology) %> |
<%= link_to 'Back', technologies_path %>

<% if session[:source]%>
  <p> Visited from <%= session[:source] %> </p>
<% end %>
