<%= form_for (@technologies) do |form| %>  
  <div class="row">
      <div class="col-md-6">
         <div class="form-group">
           <%= form.label :title %>
           <%= form.text_field :title, class: "form-control" %>
         </div>
       
         <div class="form-group">
           <%= form.label :subtitle %>
           <%= form.text_area :subtitle, class: "form-control" %>
         </div>

         <div class="form-group upload-btn">
            <label class='btn btn-primary'>
              Upload Main Image<%= form.file_field :main_image, style: 'display:none;' %>
            </label>
          </div>

         <div class="form-group upload-btn">
            <label class='btn btn-primary'>
              Upload Thumb Image<%= form.file_field :thumb_image, style: 'display:none;' %>
            </label>
         </div>
      </div>   

      <div class="col-md-6">
         <div class="form-group">
           <%= form.label :body %>
           <%= form.text_area :body, class: "form-control", rows: 15 %>
         </div>
      </div>
  
      <div class="col-md-12">
        <h3> Technologies Used: </h3>
          <%= form.fields_for :items do |items_form| %>
            <iv class="form-group">
                <%= items_form.label :name %>
                <%= items_form.text_field :name, class: "form-control" %>
            </div>
          <% end %>


         <div class="form-group">
           <%= form.submit "Save", class: "btn btn-primary" %>
         </div>
      </div>
  </div>
<% end %>
  